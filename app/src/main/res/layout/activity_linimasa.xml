<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".linimasa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data peminjaman"
        android:fontFamily="@font/poppins_extrabold"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/data_pinjam"/>

    <ImageView
        android:id="@+id/buat_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_pinjam"
        android:layout_marginTop="5dp"
        android:src="@drawable/crudnya" />

    <!-- Container untuk Nama dan Telepon -->

    <RelativeLayout
        android:id="@+id/container_data_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buat_crud"
        android:layout_marginTop="-115dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Nama: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtTelepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNama"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Telepon: "
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/data_pinjam"
        android:id="@+id/hapus"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/edit"
        android:layout_below="@id/hapus"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:id="@+id/tempat_edit"/>

    <!-- Navigasi Bawah -->
    <RelativeLayout
        android:id="@+id/navigasi_bawah"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle16">

        <!-- Tombol Home -->
        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/txt_beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home"
            android:layout_alignStart="@id/home"
            android:text="Beranda"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium" />

        <!-- Tombol Linimasa -->
        <ImageView
            android:id="@+id/linimasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/linimasa" />

        <TextView
            android:id="@+id/txt_linimasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linimasa"
            android:layout_centerHorizontal="true"
            android:text="Linimasa"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium" />

        <!-- Tombol Akun -->
        <ImageView
            android:id="@+id/sistem_pengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/account_circle" />

        <TextView
            android:id="@+id/txtakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sistem_pengaturan"
            android:layout_alignEnd="@id/sistem_pengaturan"
            android:text="Akun"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium" />
    </RelativeLayout>

</RelativeLayout>


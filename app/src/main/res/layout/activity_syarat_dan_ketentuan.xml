<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Syarat_dan_Ketentuan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/back1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Syarat dan Ketentuan"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_extrabold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:id="@+id/txt_syarat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_syarat"
                android:layout_marginTop="20sp"
                android:text="@string/huruf_besar"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/isi_kalimat1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isi_kalimat1"
                android:layout_marginTop="15sp"
                android:text="SYARAT DAN KETENTUAN SIPUS"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_extrabold"
                android:id="@+id/judul_besar_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul_besar_1"
                android:layout_marginTop="15dp"
                android:text="Layanan SiPus"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/judul_besar_2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul_besar_2"
                android:layout_marginTop="20sp"
                android:text="@string/isi_2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/isi_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isi_1"
                android:layout_marginTop="15dp"
                android:text="Persyaratan Pengguna Layanan"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/judul_besar_3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul_besar_3"
                android:layout_marginTop="20sp"
                android:text="@string/isi_3"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/isi_kalimat2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/isi_kalimat2"
                android:layout_marginTop="15dp"
                android:text="Akun Anda"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/judul_besar_4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul_besar_4"
                android:layout_marginTop="20sp"
                android:text="@string/isi_4"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/isi_kalimat3"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
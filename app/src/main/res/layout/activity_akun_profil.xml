<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".akun_profil">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logosipus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/logo_sipus"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_sipus"
        android:layout_marginTop="40dp"
        android:src="@drawable/editprofil"
        android:id="@+id/edit_profil"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_profil"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="23dp"
        android:src="@drawable/syaratketentuan"
        android:id="@+id/SyaratKetentuan"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SyaratKetentuan"
        android:src="@drawable/btn_keluar"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_keluar"/>

    <!-- Navigasi Bawah -->
    <RelativeLayout
        android:id="@+id/navigasi_bawah"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle16">

        <!-- Tombol Home -->
        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/txt_beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home"
            android:layout_alignStart="@id/home"
            android:text="Beranda"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium" />

        <!-- Tombol Linimasa -->
        <ImageView
            android:id="@+id/linimasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/linimasa" />

        <TextView
            android:id="@+id/txt_linimasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linimasa"
            android:layout_centerHorizontal="true"
            android:text="Linimasa"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium" />

        <!-- Tombol Akun -->
        <ImageView
            android:id="@+id/sistem_pengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/account_circle" />

        <TextView
            android:id="@+id/txtakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sistem_pengaturan"
            android:layout_alignEnd="@id/sistem_pengaturan"
            android:text="Akun"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium" />
    </RelativeLayout>

</RelativeLayout>
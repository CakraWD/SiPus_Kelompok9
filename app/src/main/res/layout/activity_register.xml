<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/HijauSage">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_2"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/arrow2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle10"
        android:layout_marginTop="140dp"
        android:id="@+id/rectangle10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow2"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:fontFamily="@font/poppins_extrabold"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginTop="80dp"
        android:id="@+id/text_9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/text_9"
        android:layout_marginLeft="34dp"
        android:id="@+id/text_11"
        android:textSize="16sp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/text_9"
        android:layout_marginLeft="34dp"
        android:id="@+id/text_13"
        android:textSize="16sp"
        android:layout_marginTop="145dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Konfirmasi Password"
        android:layout_below="@id/text_9"
        android:layout_marginLeft="34dp"
        android:id="@+id/text_14"
        android:textSize="16sp"
        android:layout_marginTop="260dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/text_9"
        android:padding="30dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Email"
            android:paddingLeft="20dp"
            android:background="@drawable/edit_text"
            android:layout_marginTop="43dp"
            android:id="@+id/edt_emailsignup"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Password"
            android:paddingLeft="20dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/edit_text"
            android:id="@+id/edt_Pass"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Konfirmasi Password"
            android:paddingLeft="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/edit_text"
            android:id="@+id/edt_konfirpass"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_lanjutkan"
        android:backgroundTint="@color/HijauSage"
        android:layout_below="@id/text_9"
        android:text="Register"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_extrabold"
        android:textSize="20sp"
        android:layout_marginTop="480dp"
        android:id="@+id/btn_register"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/btn_register"
        android:gravity="center"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun?"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:id="@+id/text_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/HijauSage"
            android:layout_marginLeft="5dp"
            android:id="@+id/text_21"/>

    </LinearLayout>
  </RelativeLayout>